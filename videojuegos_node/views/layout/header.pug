nav.navbar.navbar-dark.fixed-top(style="background-color: #111111;")
    .container-fluid
        a.navbar-brand(href="/") 
            img.nav-icon-chico(src="/image/icons/logo.png" alt="login icon")
        button.navbar-toggler(type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation")
            span.navbar-toggler-icon
        .offcanvas.offcanvas-end.text-bg-dark(tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel")
            .offcanvas-header
                h5.offcanvas-title#offcanvasDarkNavbarLabel 
                    img.nav-icon-chico(src="/image/icons/logo.png" alt="login icon")
                button.btn-close.btn-close-white(type="button" data-bs-dismiss="offcanvas" aria-label="Close")
            .offcanvas-body
                ul.navbar-nav.justify-content-end.flex-grow-1.pe-3
                    if loggedin
                        li.nav-item
                            a.nav-link.active(aria-current="page" href="/login") Iniciar sesión
                        li.nav-item
                            a.nav-link(href="/register") Registro
                        li.nav-item
                            a.nav-link(href="/carrito/carrito") Carrito
                    else
                        li.nav-item
                            a.nav-link.active(aria-current="page" href="/carrito/carrito") Carrito
                            span#contador-carrito.badge.bg-white.text-dark 0
                        li.nav-item
                            a.nav-link(href="/logout") Cerrar sesión
